<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Personal Web</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" 
      crossorigin="anonymous">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body style="font-family: 'Poppins', sans-serif;">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg " style="background-color: #26292b;">
      <div class="container">
        <a class="navbar-brand" href="#">
          <img 
            src="../image/R.png" 
            alt="Bootstrap" 
            width="40px" 
            height="40px">
        </a>
        <button 
            class="navbar-toggler text-white" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#navbarSupportedContent" 
            aria-controls="navbarSupportedContent" 
            aria-expanded="false" 
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"><i class="fa-solid fa-bars my-1"></i></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item ms-3">
              <a 
                  class="nav-link text-white fw-bold" 
                  aria-current="page" 
                  href="/">Home</a>
            </li>
            {{#if isLogin}}
            <li class="nav-item ms-3">
              <a class="nav-link active text-white fw-bold" 
                 href="/blog">Add Project</a>
            </li>
            {{/if}}
          </ul>
          <div class="d-flex justify-content-end">
            <ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
              {{#if isLogin}}
                <li class="nav-item me-3">
                  <a class="nav-link text-white fw-bold" 
                     href="/#">Hello, {{sigin}}</a>
                </li>
                <li class="nav-item me-3">
                  <a class="nav-link text-white fw-bold" href="/logout">Logout</a>
                </li>
                {{else}}
                <li class="nav-item me-3">
                  <a class="nav-link text-white fw-bold" 
                     href="/register">Register</a>
                </li>
                <li class="nav-item me-3">
                  <a class="nav-link text-white fw-bold" href="/login">Login</a>
                </li>
                {{/if}}
              </ul>
          </div>
          <form class="d-flex" role="search">
            <a 
                class=" btn btn-outline text-white fw-bold" 
                style="background-color: #a2b2ee;" 
                type="submit" href="/contact">Contact Me</a>
          </form>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <!-- From Blog -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col text-center p-4">
                    <h2>Created Blog</h2>
                </div>
            </div>
            <form method="post" action="blog" enctype="multipart/form-data">
            <div class="row mb-3 justify-content-center ">
                <div class="col-sm-8  ">
                    <label for="input-title" 
                           class="form-label fs-4">Project Name</label>
					          <input type="text" 
                           class="form-control shadow-sm bg-secondary-subtle" 
                           id="input-title" 
                           name="name"/>
                </div>
            </div>
            <div class="row mb-ms-3 justify-content-center">
            <div class="col-sm-4">
                <label for="input-blog-startDate" class="form-label fs-4 ">Start Date</label>
                <input
                    type="date"
                    class="form-control shadow-sm bg-secondary-subtle"
                    id="input-blog-startDate" 
                    name="start_date"/>
            </div>
            <div class="col-sm-4">
                <label for="input-blog-endDate" class="form-label fs-4">End Date</label>
                <input
                    type="date"
                    class="form-control shadow-sm bg-secondary-subtle"
                    id="input-blog-endDate"
                    name="end_date"/>
            </div>
        </div>
        <div class="row mb-3 justify-content-center">
            <div class="col-sm-8">
                <label for="input-blog-content" class="form-label fs-4">Description</label>
					<textarea 
                        name="description"
						class="form-control shadow-sm bg-secondary-subtle"
						id="input-blog-content"
						rows="3"
						style="height: 200px; resize: none"></textarea>
            </div>
        </div>
        <div class="row mb-2 justify-content-center">
            <div class="col-sm-8">
                <label class="form-label fs-4">Technologies</label>
            </div>
        </div>
        <div class="row justify-content-center fs-5">
            <div class="col-sm-4 ">
                <div class="form-check d-flex align-items-center gap-2">
                    <input
                        class="form-check-input bg-secondary-subtle"
                        type="checkbox"
                        value="true"
                        id="checkbox-javascript"
                        name="javascript" />
                    <label class="form-check-label fs-4" for="checkbox-javascript">JavaScript</label>
                </div>
                <div class="form-check d-flex align-items-center gap-2">
                    <input
                        class="form-check-input bg-secondary-subtle"
                        type="checkbox"
                        value="true"
                        id="checkbox-reactjs"
                        name="reactjs" />
                    <label class="form-check-label fs-4" for="checkbox-reactjs">React Js</label>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="form-check d-flex align-items-center gap-2">
                    <input
                        class="form-check-input bg-secondary-subtle"
                        type="checkbox"
                        value="true"
                        id="checkbox-nextjs"
                        name="vuejs" />
                    <label class="form-check-label fs-4" for="checkbox-nextjs">Vue Js</label>
                </div>
                <div class="form-check d-flex align-items-center gap-2 mb-3">
                    <input
                        class="form-check-input bg-secondary-subtle"
                        type="checkbox"
                        value="true"
                        id="checkbox-nodejs"
                        name="nodejs" />
                    <label class="form-check-label fs-4" for="checkbox-nodejs">Node Js</label>
                </div>
            </div>
            <div class="row mb-3 justify-content-center">
                <div class="col-sm-8">
                    <label for="formFile" class="form-label fs-4 ">Upload Image</label>
					<input class="form-control " type="file" id="formFile" name="upload-image" />
                </div>
            </div>
            <div class="row mb-3 d-flex justify-content-end">
                <div class="col-sm-4">
                    <button class="btn btn-primary rounded-pill px-5" type="submit">Submit</button>
                </div>
            </div>
            </form>
    </section>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>