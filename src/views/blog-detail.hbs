<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Personal Web</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" 
      crossorigin="anonymous">
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body style="font-family: 'Poppins', sans-serif;">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg " style="background-color: #26292b;">
      <div class="container">
        <a class="navbar-brand" href="#">
          <img 
            src="../image/R.png" 
            alt="Bootstrap" 
            width="40px" 
            height="40px">
        </a>
        <button 
            class="navbar-toggler text-white" 
            type="button" 
            data-bs-toggle="collapse" 
            data-bs-target="#navbarSupportedContent" 
            aria-controls="navbarSupportedContent" 
            aria-expanded="false" 
            aria-label="Toggle navigation">
            <span class="navbar-toggler-icon text-white "><i class="fa-solid fa-bars my-1"></i></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item ms-3">
              <a 
                  class="nav-link text-white fw-bold" 
                  aria-current="page" 
                  href="/">Home</a>
            </li>
            {{#if isLogin}}
            <li class="nav-item ms-3">
              <a class="nav-link active text-white fw-bold" 
                 href="/blog">Add Project</a>
            </li>
            {{/if}}
          </ul>
           <div class="d-flex justify-content-end">
            <ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
              {{#if isLogin}}
                <li class="nav-item me-3">
                  <a class="nav-link text-white fw-bold" 
                     href="/#">Hello, {{sigin}}</a>
                </li>
                <li class="nav-item me-3">
                  <a class="nav-link text-white fw-bold" href="/logout">Logout</a>
                </li>
                {{else}}
                <li class="nav-item me-3">
                  <a class="nav-link text-white fw-bold" 
                     href="/register">Register</a>
                </li>
                <li class="nav-item me-3">
                  <a class="nav-link text-white fw-bold" href="/login">Login</a>
                </li>
                {{/if}}
              </ul>
          </div>
          <form class="d-flex" role="search">
            <a 
                class=" btn btn-outline active text-white fw-bold" 
                style="background-color: #a2b2ee;" 
                type="submit" href="/contact">Contact Me</a>
          </form>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->

    <!-- Blog Detail -->
    <section >
        <div class="border p-5 bg-secondary-subtle">
            <h2 class="text-center fw-bold fs-1">{{blog.name}}</h2>
            <div class="container">
                <div class="row justify-content-between m-0 m-lg-5">
                    <div class="col-sm-3 d-lg-none d-block my-3">
                        <img src="../{{blog.image}}" 
                             alt="image is not"
                             width="270" height="150">
                    </div>
                    <div class="col-sm-6 d-lg-block d-none">
                        <img src="../{{blog.image}}" 
                             alt="image is not">
                    </div>
                    <div class="col-sm-4">
                        <h4 class="fw-bold fs-3">Duration</h4>
                        <p><i class="fa-regular fa-calendar-days"></i> Durasi : {{blog.duration}} </p>
                        <p><i class="fa-regular fa-clock"></i> {{blog.start_date}} - {{blog.end_date}} </p>
                        <h4 class="fw-bold fs-3">Technologies</h4>
                        <div class="gap-5 fs-5 mb-3" style="display: flex;">
                          {{#if blog.javascript}}
                          <a><i class="fa-brands fa-js"></i> JavaScript</a>
                          {{/if}}
                          {{#if blog.reactjs}}
                          <a><i class="fa-brands fa-react"></i> React Js</a></div>
                        <div class="gap-5 fs-5 mb-3" style="display: flex;"> 
                          {{/if}}
                          {{#if blog.vuejs}}
                          <a><i class="fa-brands fa-vuejs"></i> Vue Js</a>
                          {{/if}}
                          {{#if blog.nodejs}}
                          <a style="margin-left: 35px;"><i class="fa-brands fa-node"></i> Node Js</a>
                          {{/if}}</div>
                    </div>
                    <p class="fs-8 mt-3">Author : {{blog.author}}</p>
                </div>
                <div class="row">
                  <div class="col-sm-12">
                    <p style="text-align: justify;" >{{blog.description}} </p>
                  </div>
                </div>
            </div>
        </div>
    </section>
    <!-- end blog -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>